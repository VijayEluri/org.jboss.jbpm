<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns="urn:jbpm.org:jpdl-3.1"  name="taskWithVariables">
   <swimlane name="initiator"></swimlane>
   <start-state name="start">
      <task name="request entry" swimlane="initiator">
      </task>
      <transition name="" to="taskNode"></transition>
   </start-state>
   <task-node name="taskNode">
      <task name="request evaluation" swimlane="initiator">
         <controller>
            <variable name="date:start date"></variable>
            <variable name="string:duration" access="read,write,required"></variable>
            <variable name="string:info" access="read"></variable>
            <variable name="string:decision" access="read"></variable>
         </controller>
      </task>
      <transition name="endThis" to="end"></transition>
   </task-node>
   <end-state name="end"></end-state>
</process-definition>