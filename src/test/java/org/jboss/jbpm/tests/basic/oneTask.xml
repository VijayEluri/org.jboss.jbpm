<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns="urn:jbpm.org:jpdl-3.1"  name="oneTask">
   <swimlane name="initiator"></swimlane>
   <start-state name="start">
      <transition name="startThis" to="task"></transition>
   </start-state>
   <task-node name="task">
      <task name="request evaluation" swimlane="initiator">
         <controller>
            <variable name="xx" access="read,write,required"></variable>
         </controller>
      </task>
      <task name="request clarification" blocking="true">
         <controller>
            <variable name="whatever" access="read,write,required"></variable>
         </controller>
      </task>
      <transition name="endThis" to="end"></transition>
   </task-node>
   <end-state name="end"></end-state>
</process-definition>