<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns=""  name="nestSomeProcess">
   <start-state name="start">
      <transition name="" to="submitNewCase"></transition>
   </start-state>
   <task-node name="submitNewCase">
      <task name="Submit New Case">
         <controller>
            <variable name="string:plaintiffFirstName" access="read,write,required"></variable>
            <variable name="string:plaintiffLastName" access="read,write,required"></variable>
            <variable name="string:plaintiffSocialNumber" access="read,write,required"></variable>
            <variable name="string:plaintiffAddress"></variable>
            <variable name="string:plaintiffPostCode"></variable>
            <variable name="string:plaintiffMunicipality" access="read,write,required"></variable>
            <variable name="string:plaintiffHomePhone"></variable>
            <variable name="string:plaintiffWorkPhone"></variable>
            <variable name="string:plaintiffMobilePhone" access="read"></variable>
            <variable name="string:plaintiffProvidedDefendantName" access="read,write,required"></variable>
            <variable name="string:plaintiffProvidedDefendantAddress"></variable>
            <variable name="string:plaintiffProvidedDefendantPhone"></variable>
            <variable name="string:plaintiffPurchaseInformation" access="read,write,required"></variable>
            <variable name="string:plaintiffDispute" access="read,write,required"></variable>
            <variable name="string:plaintiffArgumentation" access="read,write,required"></variable>
            <variable name="files:plaintiffDocuments"></variable>
         </controller>
      </task>
      <transition name="" to="sendNewCaseMessages"></transition>
   </task-node>
   <node name="sendNewCaseMessages">
      <transition name="" to="caseOverview"></transition>
   </node>
   <task-node name="caseOverview">
      <task name="Case Overview">
         <controller>
            <variable name="string:plaintiffFirstName"></variable>
            <variable name="string:plaintiffLastName" access="read"></variable>
            <variable name="string:plaintiffSocialNumber" access="read"></variable>
            <variable name="string:plaintiffAddress" access="read"></variable>
            <variable name="string:plaintiffPostCode" access="read"></variable>
            <variable name="string:plaintiffMunicipality" access="read"></variable>
            <variable name="string:plaintiffHomePhone" access="read"></variable>
            <variable name="string:plaintiffWorkPhone" access="read"></variable>
            <variable name="string:plaintiffMobilePhone" access="read"></variable>
            <variable name="string:plaintiffProvidedDefendantName" access="read"></variable>
            <variable name="string:plaintiffProvidedDefendantAddress" access="read"></variable>
            <variable name="string:plaintiffProvidedDefendantPhone" access="read"></variable>
            <variable name="string:plaintiffPurchaseInformation" access="read"></variable>
            <variable name="string:plaintiffDispute" access="read"></variable>
            <variable name="string:plaintiffArgumentation" access="read"></variable>
            <variable name="files:plaintiffDocuments" access="read"></variable>
         </controller>
      </task>
      <transition name="moreInfoNeeded" to="moreInfoNeeded"></transition>
      <transition name="addComment" to="addComment"></transition>
      <transition name="inviteDefendant" to="inviteDefendant"></transition>
      <transition name="rule" to="submitRuling"></transition>
   </task-node>
   <fork name="moreInfoNeeded">
      <transition name="moreInfoNeeded" to="submitMessageToPlaintiff"></transition>
      <transition name="back" to="caseOverview"></transition>
   </fork>
   <task-node name="submitMessageToPlaintiff">
      <transition name="" to="submitAdditionalInformation"></transition>
   </task-node>
   <task-node name="submitAdditionalInformation">
      <transition name="" to="additionalInformationEnd"></transition>
   </task-node>
   <end-state name="additionalInformationEnd"></end-state>
   <task-node name="submitComment">
      <task name="Submit comment">
         <controller>
            <variable name="string:plaintiffFirstName" access="read"></variable>
            <variable name="string:comment" access="read,write,required"></variable>
         </controller>
      </task>
      <transition name="submitComment" to="afterSubmitComment"></transition>
   </task-node>
   <fork name="addComment">
      <transition name="addComment" to="submitComment"></transition>
      <transition name="back" to="caseOverview"></transition>
   </fork>
   <fork name="inviteDefendant">
      <transition name="sendEmail" to="sendEmail"></transition>
      <transition name="back" to="caseOverview"></transition>
   </fork>
   <node name="sendEmail">
      <transition name="" to="submitCaseAnswer"></transition>
   </node>
   <task-node name="submitCaseAnswer">
      <transition name="" to="caseAnswerEnd"></transition>
   </task-node>
   <end-state name="caseAnswerEnd"></end-state>
   <task-node name="submitRuling">
      <transition name="" to="sendRulingMessages"></transition>
   </task-node>
   <node name="sendRulingMessages">
      <transition name="" to="processEnd"></transition>
   </node>
   <end-state name="processEnd"></end-state>
   <end-state name="afterSubmitComment"></end-state>
</process-definition>