<?xml version="1.0" encoding="UTF-8"?>

<faces-config
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
version="1.2">
  <component>
    <component-type>BPMTaskViewer</component-type>
    <component-class>com.idega.jbpm.presentation.BPMTaskViewer</component-class>
    <property>
      <display-name>Process definition ID</display-name>
      <property-name>processDefinitionId</property-name>
      <property-class>java.lang.Long</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  <component>
    <component-type>com.idega.UIBPMIdentityMgmnt</component-type>
    <component-class>com.idega.jbpm.presentation.UIBPMIdentityMgmnt</component-class>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>

    <managed-bean>
        <managed-bean-name>taskCreatorBean</managed-bean-name>
        <managed-bean-class>com.idega.jbpm.presentation.beans.JBPMTaskCreatorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
  
    <component>
        <component-type>jBPM Task creator</component-type>
        <component-class>com.idega.jbpm.presentation.JBPMTaskCreator</component-class>
        <component-extension>
            <idegaweb-info>
                <builder-visible>true</builder-visible>
                <object-type>jsf.uicomponent</object-type>
            </idegaweb-info>
        </component-extension>
    </component>
</faces-config>