<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

	<managed-bean>
        <managed-bean-name>idegaDeployProcess</managed-bean-name>
        <managed-bean-class>com.idega.jbpm.def.DeployProcess</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
		  	<property-name>jbpmConfiguration</property-name>
		    <value>#{defaultJbpmConfiguration}</value>
		</managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>jbpmProcessBusiness</managed-bean-name>
        <managed-bean-class>com.idega.jbpm.business.JbpmProcessBusinessBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
		  	<property-name>jbpmConfiguration</property-name>
		    <value>#{defaultJbpmConfiguration}</value>
		</managed-property>
		<managed-property>
		  	<property-name>viewToTaskBinder</property-name>
		    <value>#{process_xforms_viewToTask}</value>
		</managed-property>
    </managed-bean>
</faces-config>