<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
<!-- TODO: remove this web.xml -->
	<filter>
		<filter-name>JbpmContextFilter</filter-name>
		<filter-class>org.jbpm.web.JbpmContextFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JbpmContextFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!-- This is the GDP's deployer servlet -->
	<servlet>
		<servlet-name>GDP Deployer Servlet</servlet-name>
		<servlet-class>org.jbpm.web.ProcessUploadServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>GDP Deployer Servlet</servlet-name>
		<url-pattern>/upload/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GDP Deployer Servlet</servlet-name>
		<url-pattern>/jbpm/*</url-pattern>
	</servlet-mapping>
</web-app>