<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns=""  name="participantInvitation">
   <start-state name="start">
      <transition name="" to="sendInvitation"></transition>
   </start-state>
   <node name="sendInvitation">
      <event type="node-enter">
         <action name="sendInvitationAction" class="com.idega.jbpm.process.business.SendParticipantInvitationMessageHandler" config-type="constructor"></action>
      </event>
      <transition name="" to="waitingForAccountBoundEvent"></transition>
   </node>
   <state name="waitingForAccountBoundEvent">
      <transition name="" to="assignAccToParticipant"></transition>
   </state>
   <node name="assignAccToParticipant">
      <event type="node-enter">
         <action name="assignAccAction" class="com.idega.jbpm.process.business.AssignAccountToParticipantHandler" config-type="constructor"></action>
      </event>
      <transition name="" to="end1"></transition>
   </node>
   <end-state name="end1">
      <event type="node-enter">
         <action name="endProcessAction" class="com.idega.jbpm.process.business.EndProcessHandler" config-type="constructor"></action>
      </event>
   </end-state>
</process-definition>